# Environment variables for Karmatic.io
# Copy this file to .env.local and fill in your values

# Clerk Authentication - https://clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret_here

# Supabase Configuration - https://app.supabase.com/
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URLs (Prisma) - From Supabase Dashboard
# Pooler connection for app (port 6543 with pgbouncer)
DATABASE_URL="postgresql://postgres.your-project:your-password@aws-0-region.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection for migrations (port 5432 without pgbouncer)
DIRECT_URL="postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres"

# Google Maps Configuration - https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_GOOGLE_MAP_ID=your_google_map_id_here


# OpenRouter AI Configuration - https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
# AI Model Selection (optional, defaults to moonshotai/kimi-k2)
# Options: anthropic/claude-3-5-sonnet, moonshotai/kimi-k2, openai/gpt-4-turbo-preview
AI_MODEL=moonshotai/kimi-k2

# Google Tag Manager - https://tagmanager.google.com/
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Development Settings (optional)
NEXT_PUBLIC_DEBUG_MODE=false

# Apify Integration - https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_api_token_here

# Agency Analysis Configuration
AGENCY_MIN_RATING=4.0
AGENCY_MIN_REVIEWS_PER_MONTH=15
AGENCY_ANALYSIS_MONTHS=6
AGENCY_BUSINESS_TYPES=["car dealer","auto sales","automotive dealer","agencia de autos"]

# AI Model Tiers for Cost Optimization
AI_MODEL_TIER1=openai/gpt-3.5-turbo
AI_MODEL_TIER2=anthropic/claude-3-haiku
AI_MODEL_TIER3=moonshotai/kimi-k2

# Cache Configuration
SEMANTIC_CACHE_TTL=604800
CACHE_SIMILARITY_THRESHOLD=0.85
UPSTASH_REDIS_REST_URL=https://next-rattler-50102.upstash.io
UPSTASH_REDIS_REST_TOKEN=AcO2AAIjcDE1NmFkYjQwNTQzNmY0OWY3OWRkZWJiZTE4NDQ2MGYyNnAxMA
UPSTASH_VECTOR_REST_URL=your_upstash_vector_url_here
UPSTASH_VECTOR_REST_TOKEN=your_upstash_vector_token_here

# Optional - Uncomment and configure if needed
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# CLEANUP_SECRET_KEY=your_secret_key_for_cleanup_endpoints